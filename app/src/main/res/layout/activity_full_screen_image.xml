<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FullScreenImage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/pad5">

            <ImageView
                android:id="@+id/cancle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad5"
                android:src="@drawable/ic_cancel1" />

         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/fullscreenimage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".93"/>

            <TextView
                android:id="@+id/btnsaveimag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".07"
                android:background="@color/purple_500"
                android:gravity="center"
                android:padding="@dimen/pad5"
                android:text="@string/saveimage"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>


</LinearLayout>