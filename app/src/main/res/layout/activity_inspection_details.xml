<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activities.InspectionDetails"
        android:background="@color/background_material_light"
        >


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
            android:id="@+id/lineardetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_200"
                android:orientation="horizontal"
                android:paddingTop="@dimen/pad5"
                android:paddingBottom="@dimen/pad5"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pad5"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:id="@+id/titles"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/pad5"
                    android:text="@string/inspedetail"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/marz5"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:background="@drawable/editback1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="@dimen/pad5"
                            android:layout_weight=".49"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/beforimg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.8dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="1dp"
                            android:background="@color/colorDarkgreen" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:layout_margin="@dimen/pad5"
                            android:layout_weight=".49"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/afterimg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="fitCenter"
                                android:src="@drawable/safelogo" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Created Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/dtevalue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Before Comment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/comment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Created By"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/sendrnme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="@string/locations"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/locations"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="@string/deparment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/department"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Concern Area"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/consarea"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Status"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Cost"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>


                            <TextView
                                android:id="@+id/cost"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Closer Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/closerdte"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Closer Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/closrnme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="After Comment"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/aftercomment"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Verified Date"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/verifydata"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:padding="@dimen/pad3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".40"
                                android:gravity="center|left"
                                android:padding="@dimen/pad5"
                                android:text="Verified Name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/verifynme"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".60"
                                android:gravity="right"
                                android:padding="@dimen/pad5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/login" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.8dp"
                            android:layout_marginLeft="1dp"
                            android:layout_marginRight="1dp"
                            android:background="@color/colorgray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:id="@+id/closelayout"
                            android:visibility="gone"
                           >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_margin="@dimen/pad5">
                                <Spinner
                                    android:id="@+id/closelist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:background="@color/colorgray" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/closeinspection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/close"
                    android:textColor="@color/white"
                    android:textSize="@dimen/login"
                    android:padding="@dimen/pad7"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:background="@color/purple_500"

                    />

            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>