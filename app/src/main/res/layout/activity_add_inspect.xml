<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddInspect"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lineardetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/purple_200"
            android:weightSum="1"
            android:paddingTop="@dimen/pad5"
            android:paddingBottom="@dimen/pad5">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad5"
                android:src="@drawable/ic_home" />

            <TextView
                android:id="@+id/titles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:textStyle="bold"
                android:text="@string/addinspe"
                android:padding="@dimen/pad5"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/pad7"
            android:orientation="vertical"
            android:background="@drawable/editback1"
            android:gravity="center"
            android:id="@+id/selectedimg"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_photo_camera"
                android:layout_gravity="center"
                android:id="@+id/beforeimg"
                android:scaleType="fitCenter"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                android:orientation="vertical"
                android:gravity="center">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/responsbility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                android:orientation="vertical"
                android:gravity="center">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                android:orientation="vertical"
                android:gravity="center">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/concernarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    android:spinnerMode="dropdown"

                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                android:orientation="vertical"
                android:gravity="center">
                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/subconcernarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    android:spinnerMode="dropdown"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="@dimen/pad7"
            android:orientation="vertical"
            android:background="@drawable/editback1"
            android:gravity="top|start">
            <EditText
                android:id="@+id/commentbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/commentbox"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:paddingLeft="@dimen/pad5"
                android:paddingRight="@dimen/pad5"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                android:maxLines="10"
                android:minLines="1"
                android:lines="8"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad7"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_weight=".49"
                android:layout_height="45dp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:padding="@dimen/pad3"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/btnback1"
                android:visibility="gone"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".01"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:padding="@dimen/pad3"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:background="@drawable/btnback1"

                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
</layout>