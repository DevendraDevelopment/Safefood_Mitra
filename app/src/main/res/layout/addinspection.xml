<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lineardetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pad7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/pad7"
            android:weightSum="1"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/addinspe"
                android:textColor="@color/black"
                android:textSize="@dimen/login"
                android:padding="@dimen/pad3"
                android:layout_weight=".85"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel1"
                android:padding="@dimen/pad3"
                android:layout_gravity="right"
                android:background="@android:color/transparent"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:gravity="center">
                <Spinner
                    android:id="@+id/responsbility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:gravity="center">
                <Spinner
                    android:id="@+id/locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    android:spinnerMode="dropdown"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/pad7"
            android:background="@drawable/editback1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical"
                android:gravity="center">
                <Spinner
                    android:id="@+id/concernarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/pad3"
                    android:spinnerMode="dropdown"

                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad7"
            android:orientation="vertical"
            android:background="@drawable/editback1"
            android:gravity="top|start">
            <EditText
                android:id="@+id/commentbox"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@android:color/transparent"
                android:hint="@string/commentbox"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/login"
                android:inputType="text"
                android:gravity="top|start"
                android:paddingLeft="@dimen/pad5"
                android:paddingRight="@dimen/pad5"
                android:paddingTop="@dimen/pad3"
                android:paddingBottom="@dimen/pad3"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad7"
            android:orientation="vertical"
            android:background="@drawable/editback1"
            android:id="@+id/imglayout"
            android:visibility="gone">
            <ImageView
                android:id="@+id/selectedimg"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="@dimen/pad3"
                android:src="@drawable/inspection"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="@dimen/pad7">

            <ImageButton
                android:id="@+id/cameraimg"
                android:layout_width="0dp"
                android:layout_weight=".49"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/btnback1"
                android:src="@drawable/ic_photo_camera"
                android:padding="@dimen/pad3"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".01"/>

            <ImageButton
                android:id="@+id/galerryimg"
                android:layout_width="0dp"
                android:layout_weight=".49"
                android:layout_height="45dp"
                android:gravity="center"
                android:background="@drawable/btnback1"
                android:src="@drawable/ic_image_gallery"
                android:padding="@dimen/pad3"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad7"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btnback1">

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:padding="@dimen/pad3"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pad7"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btnback1">

            <TextView
                android:id="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="@dimen/login"
                android:padding="@dimen/pad3"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>