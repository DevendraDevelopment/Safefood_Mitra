<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad5">
        <TextView
            android:id="@+id/usernme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:padding="@dimen/pad3"
            android:textColor="@color/black"
            android:textSize="@dimen/login"
            android:text="@string/selectitem"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SearchView
                android:id="@+id/catsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:textColor="@color/black"
                android:textSize="@dimen/login"
                android:text="@string/selectitem"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:id="@+id/catcustomsearchrecyler"
                android:padding="@dimen/pad5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/pad5">
            <TextView
                android:id="@+id/catcustomclose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="@dimen/pad3"
                android:paddingRight="@dimen/pad5"
                android:textColor="@color/black"
                android:textSize="@dimen/login"
                android:text="@string/close"
                android:textAllCaps="true"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
