<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dim1"
            android:id="@+id/prod_name"
            android:padding="@dimen/pad10"
            android:background="#d0e5c6"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/dim1"
            android:id="@+id/parcate"
            android:paddingLeft="@dimen/pad10"
            android:paddingRight="@dimen/pad5"
            android:paddingBottom="@dimen/pad3"
            android:visibility="gone"
            />
<LinearLayout
    android:id="@+id/lineardata"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="#a2cf8a"
    android:visibility="visible">
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".50"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad10"
        android:textColor="@color/black"
        android:textSize="@dimen/dim1"
        android:id="@+id/parameter"
        />
<View
    android:layout_width="1dp"
    android:layout_height="match_parent"
    android:background="@color/black"
    />
    <TextView
        android:layout_width="0dp"
        android:layout_weight=".50"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad10"
        android:textColor="@color/black"
        android:textSize="@dimen/dim1"
        android:id="@+id/perm_limit"
        />
</LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad10"
            android:textColor="@color/black"
            android:textSize="@dimen/dim1"
            android:id="@+id/discrpition"
            android:visibility="visible"
            />


    </LinearLayout>

</LinearLayout>